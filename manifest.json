{
  "manifest_version": 3,
  "name": "Application filler extension",
  "version": "1.0",
  "description": "Fills job application forms using Chat",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/resume-icon.jpg",
      "128": "assets/resume-icon.jpg"
    }
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["https://api.openai.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}

